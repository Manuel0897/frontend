
@import url('https://fonts.googleapis.com/css2?family=Roboto+Condensed&display=swap')

body
  font-family: 'Roboto Condensed', sans-serif;
  background-color: #FFF
  color: #47525E

*
  box-sizing border-box
  margin 0
  padding 0

.No-info
  margin 1rem

.App-container
  padding 1rem
  margin 0 auto
  max-width 1320px

.App-line
  display flex
  flex-wrap wrap
  align-items stretch

.Card-container
  width 100%
  margin 0.5rem 1px
  padding 0.8rem 1rem
  display inline-block
  background-color #BDF1D4

h2
  font-size 1.8rem
  margin-bottom 0.5rem

h3
  margin-bottom 0.5rem

p 
  font-size 1.2rem
  margin-bottom 0.5rem